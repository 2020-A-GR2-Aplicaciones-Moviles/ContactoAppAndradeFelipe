<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/button_login"
                android:layout_width="262dp"
                android:layout_height="56dp"
                android:layout_marginTop="16dp"
                android:background="#FFFFFF"
                android:fontFamily="casual"
                android:text="@string/login_btn"
                android:textAlignment="center"
                android:textColor="#D81B60"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/editTextTextPassword"
                android:layout_width="368dp"
                android:layout_height="42dp"
                android:layout_marginTop="24dp"
                android:ems="10"
                android:inputType="textPassword" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="301dp"
                android:layout_height="41dp"
                android:layout_marginTop="24dp"
                android:fontFamily="casual"
                android:text="@string/password_txt"
                android:textAlignment="center"
                android:textColor="#00ACC1"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="291dp"
                android:layout_height="213dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                app:srcCompat="@drawable/ic_contact"
                tools:ignore="MissingConstraints" />

            <EditText
                android:id="@+id/editTextTextEmailAddress"
                android:layout_width="359dp"
                android:layout_height="46dp"
                android:layout_marginTop="24dp"
                android:ems="10"
                android:inputType="textEmailAddress" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="45dp"
                android:layout_height="37dp"
                android:layout_marginEnd="16dp"
                android:tint="@color/design_default_color_secondary"
                app:srcCompat="@android:drawable/ic_partial_secure" />

            <CheckBox
                android:id="@+id/checkBox_Recordarme"
                android:layout_width="233dp"
                android:layout_height="36dp"
                android:layout_marginTop="24dp"
                android:text="Recuerdame" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="41dp"
                android:layout_height="44dp"
                android:layout_marginEnd="16dp"
                android:tint="@color/design_default_color_secondary"
                tools:srcCompat="@android:drawable/ic_menu_myplaces" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="310dp"
                android:layout_height="41dp"
                android:layout_marginTop="24dp"
                android:fontFamily="casual"
                android:text="@string/user_txt"
                android:textAlignment="center"
                android:textColor="#00ACC1"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_marginTop="16dp"
                android:capitalize="none"
                android:fontFamily="casual"
                android:gravity="center_horizontal"
                android:text="@string/inicio_txt"
                android:textAlignment="center"
                android:textColor="#D81B60"
                android:textSize="24sp"
                tools:ignore="MissingConstraints" />
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>